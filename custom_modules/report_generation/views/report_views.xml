<odoo>
    <data>
        <!-- Form view for pdf.report model -->
        <record id="view_custom_report_form" model="ir.ui.view">
            <field name="name">custom.report.form</field>
            <field name="model">pdf.report</field>
            <field name="arch" type="xml">
                <form string="Custom Report">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view for pdf.report model -->
        <record id="view_custom_report_tree" model="ir.ui.view">
            <field name="name">custom.report.tree</field>
            <field name="model">pdf.report</field>
            <field name="arch" type="xml">
                <tree string="Custom Report">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
